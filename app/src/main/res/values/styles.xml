<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultButton">
        <item name="android:background">@color/purple_500</item>
        <item name="android:padding">6dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TableStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TableHeader" parent="TableStyle">
        <item name="android:background">@color/purple_500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TableItem" parent="TableStyle">
        <item name="android:background">@color/purple_DD8</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TableMidHeader" parent="TableStyle">
        <item name="android:background">@color/purple_BD8</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextH3">
        <item name="android:textSize">16sp</item>
    </style>
</resources>